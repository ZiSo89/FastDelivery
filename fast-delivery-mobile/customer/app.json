{
  "expo": {
    "name": "FastDelivery",
    "slug": "customer",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#00c2e8"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.fastdelivery.customer"
    },
    "android": {
      "package": "com.fastdelivery.customer",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#00c2e8"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.ico"
    },
    "plugins": [
      "expo-secure-store",
      [
        "expo-av",
        {
          "microphonePermission": "Επιτρέψτε στην εφαρμογή να χρησιμοποιήσει το μικρόφωνο για την ηχογράφηση της παραγγελίας σας."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "7eec880b-7918-467c-96c8-7dad2d531d01"
      }
    }
  }
}
